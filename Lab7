#include <stdio.h>

int main(void)
{
	long N; // исходное число
	unsigned long m; // беззнаковая версия исходного числа
	unsigned long mask; // маска

	printf_s("N= ");
	scanf_s("%x", &N); // ввод в шестнадцатиричном формате
	m = (unsigned int)N;
	mask = 0xffffffff; // забиваем маску единицами
	do
	{
		m >>= 1; // сдвигаем число вправо
		mask <<= 1; // а маску сдвигаем влево
	} while (m != 1); // сдвигаем число, пока не получим единицу, т. е. 1 в самом младшем разряде
	mask = ~mask; // инвертируем маску и получаем единицы в маске, стоящие правее старшей 1 в числе m
	N = N & ~mask; // обнуляем разряды согласно маске
	printf_s("result: %x\n", N);
	getchar();
	getchar();
	return 0;
}
